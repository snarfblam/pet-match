<div class="modal">
    <div class="modal-content modal-content-error">
        <h2 id="modal-error-message">AN ERROR OCCURRED.</h2>
        <p id="modal-error-details"></p>
        <div class="modal-button-container">
            <button type="submit" class='modal-button' id='error-ok'>OK</button>
        </div>
        </form>
    </div>
        <div class="modal-content modal-content-message">
        <h2 id="modal-message-message">AN ERROR OCCURRED.</h2>
        <p id="modal-message-details"></p>
        <div class="modal-button-container">
            <button type="submit" class='modal-button' id='message-cancel'>Cancel</button>
            <button type="submit" class='modal-button' id='message-ok'>OK</button>
        </div>
        </form>
    </div>
</div>
